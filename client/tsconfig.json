{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "ES6",
      "ES7",
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "allowJs": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ],
  "compileOnSave": false
}
